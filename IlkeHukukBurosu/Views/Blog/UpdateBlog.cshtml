@model IlkeHukukBurosu.DAL.Entities.Blog
@{
    ViewData["Title"] = "UpdateBlog";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<br/>
<form method="post">
    <input type="hidden" asp-for="BlogID" />
    <label>Blog Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Blog İçerik</label>
    <input type="text" asp-for="Text" class="form-control" />
    <br />
    <label>Blog Fotoğraf Url</label>
    <input type="text" asp-for="ImgUrl" class="form-control" />
    <br />
    <button class="btn btn-success">Blog Güncelle</button>
</form>



